<Window x:Class="UD3_3_Bran_Bouzas_Prado.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:components"
        Title="Prueba Reloj" ResizeMode="NoResize" Width="350" Height="350">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <components:DigitalClock x:Name="MiReloj" MensajeAlarma="Despierta ya!" Grid.Row="0" Grid.ColumnSpan="4" HorizontalAlignment="Center"/>

        <Button Content="Cambiar Formato 12/24h" Click="ButtonCambiarFormato_Click" Grid.Row="1" Grid.ColumnSpan="4" Height="30" FontWeight="SemiBold" Margin="20,0,20,0" BorderThickness="1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <TextBlock Text="Hora:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Border Grid.Row="2" Grid.Column="1" Margin="0,0,20,0" CornerRadius="5" BorderBrush="#888" BorderThickness="1" VerticalAlignment="Center">
            <TextBox x:Name="txtHoraAlarma" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Transparent" BorderThickness="0"/>
        </Border>

        <TextBlock Text="Minuto:" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Border Grid.Row="2" Grid.Column="3" Margin="0,0,22,0" CornerRadius="5" BorderBrush="#888" BorderThickness="1" VerticalAlignment="Center">
            <TextBox x:Name="txtMinutoAlarma" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Transparent" BorderThickness="0"/>
        </Border>

        <TextBlock Text="Mensaje:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,0,20,0" CornerRadius="5" BorderBrush="#888" BorderThickness="1" VerticalAlignment="Center">
            <TextBox x:Name="txtMensajeAlarma" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Transparent" BorderThickness="0"/>
        </Border>

        <Button Content="Programar Alarma" Click="ButtonProgramarAlarma_Click" Grid.Row="4" Grid.ColumnSpan="4" Height="30" FontWeight="SemiBold" Margin="20,0,20,0" BorderThickness="1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>