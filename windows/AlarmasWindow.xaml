<Window x:Class="UD3_3_Bran_Bouzas_Prado.windows.AlarmasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista de Alarmas" Height="350" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <ListView x:Name="lvAlarmas" Grid.Row="0" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Hora" Width="80" DisplayMemberBinding="{Binding HoraMinuto}"/>
                    <GridViewColumn Header="Mensaje" Width="280" DisplayMemberBinding="{Binding Mensaje}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="75"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnEditar" Content="Editar" Grid.Column="1" IsEnabled="False" Margin="5,0" Click="BtnEditar_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            
            <Button x:Name="btnEliminar" Content="Eliminar" Grid.Column="2" IsEnabled="False" Margin="5,0" Click="BtnEliminar_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            
            <Button Content="Cerrar" Grid.Column="3" Margin="5,0" Click="BtnCerrar_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Window>