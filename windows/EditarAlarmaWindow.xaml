<Window x:Class="UD3_3_Bran_Bouzas_Prado.windows.EditarAlarmaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Alarma" Height="250" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Hora:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5"/>
        <Border Grid.Row="0" Grid.Column="1" Margin="10,0,10,0" CornerRadius="5" BorderBrush="#888" BorderThickness="1" VerticalAlignment="Center">
            <TextBox x:Name="txtHora" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Transparent" BorderThickness="0"/>
        </Border>

        <TextBlock Text="Minuto:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5"/>
        <Border Grid.Row="1" Grid.Column="1" Margin="10,0,10,0" CornerRadius="5" BorderBrush="#888" BorderThickness="1" VerticalAlignment="Center">
            <TextBox x:Name="txtMinuto" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Transparent" BorderThickness="0"/>
        </Border>

        <TextBlock Text="Mensaje:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5"/>
        <Border Grid.Row="2" Grid.Column="1" Margin="10,0,10,0" CornerRadius="5" BorderBrush="#888" BorderThickness="1" VerticalAlignment="Center">
            <TextBox x:Name="txtMensaje" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Transparent" BorderThickness="0"/>
        </Border>

        <Grid Grid.Row="3" Grid.ColumnSpan="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Cancelar" Grid.Column="1" Width="75" Margin="5" Click="BtnCancelar_Click" BorderThickness="1">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Guardar" Grid.Column="2" Width="75" Margin="5" Click="BtnGuardar_Click" BorderThickness="1">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Window>